{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Wokwi Integration Tests",
            "type": "shell",
            "command": "${workspaceFolder}/test/wokwi/run_automated_tests.sh",
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "new",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [],
            "detail": "Runs all Wokwi integration tests with automated reporting (requires WOKWI_CLI_TOKEN)"
        },
        {
            "label": "Build for Wokwi Testing",
            "type": "shell",
            "command": "pio",
            "args": [
                "run",
                "-e",
                "debug-local"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$platformio"
            ],
            "detail": "Fast build for Wokwi testing (debug-local environment)"
        },
        {
            "label": "Build All Environments",
            "type": "shell",
            "command": "pio",
            "args": [
                "run",
                "-e",
                "debug-local",
                "-e",
                "debug-upload",
                "-e",
                "release"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "problemMatcher": [
                "$platformio"
            ],
            "detail": "Builds all three environments for verification"
        },
        {
            "label": "Start Terminal Logging",
            "type": "shell",
            "command": "script",
            "args": [
                "-a",
                "${workspaceFolder}/wokwi_debug.log"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        }
    ]
}