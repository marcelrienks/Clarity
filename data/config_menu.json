        {
          "id": "back_general",
          "label": "Back",
          "type": "back"
        }
      ]
    },
    {
      "id": "display",
      "label": "Display",
      "type": "submenu",
      "items": [
        {
          "id": "theme",
          "label": "Theme",
          "type": "choice",
          "preference": "theme",
          "choices": ["Day", "Night"],
          "default": "Day"
        },
        {
          "id": "back_display",
          "label": "Back",
          "type": "back"
        }
      ]
    },
    {
      "id": "sensors",
      "label": "Sensors",
      "type": "submenu",
